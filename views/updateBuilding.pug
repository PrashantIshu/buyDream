extends base

block content
    section#property-update-settings
        section#profile
            ul#sidebar-div
                li 
                    i(class="fas fa-home")
                    a(href="/") Home
                li 
                    i(class="fas fa-cog")
                    a(href="/my-properties") My Properties
                li
                    i.q(class="fas fa-building")
                    a(href="#") My Bookings
                li 
                    i.q(class="fas fa-heart")
                    a(href="/my-wishlists") My Wishlists
                li
                    i.q(class="fas fa-star")
                    a(href="/my-reviews") My Reviews

        form#update-property
            #property-details
                h2 Property Details
                label(for="propertyName") Name
                input#propertyName(type="text" value=`${building.name}`)
                label(for="addresss") Address
                input#addresss(type="text", required value=`${building.address}`)
                label Location Advantages
                //- label#pointOne(for="locationAdvantageOne") 1. 
                input#locationAdvantageOneUpdate(type="text", placeholder="( 1 )")
                //- label#pointTwo(for="locationAdvantageOne") 2. 
                input#locationAdvantageTwoUpdate(type="text", placeholder="( 2 )")
                //- label#pointThree(for="locationAdvantageOne") 3. 
                input#locationAdvantageThreeUpdate(type="text", placeholder="( 3 )")
                //- label#pointFour(for="locationAdvantageOne") 4. 
                input#locationAdvantageFourUpdate(type="text", placeholder="( 4 )")
                //- label#pointFive(for="locationAdvantageOne") 5. 
                input#locationAdvantageFiveUpdate(type="text", placeholder="( 5 )")
                .cover-photo
                    input#first-image(type="text", value=`${building.imageCover}`, style="display: none;")
                    input#coverPhoto(type="file" accept="image/*" value=`${building.imageCover}`)
                    label(for="coverPhoto") Choose cover photo
                .building-photo
                    input#second-image(type="text", value=`${building.images[0]}`, style="display: none;")
                    input#building-1Photo(type="file" accept="image/*" value=`${building.images[0]}`)
                    label(for="building-1Photo") Choose Building photo
                .building-photo
                    input#third-image(type="text", value=`${building.images[1]}`, style="display: none;")
                    input#building-2Photo(type="file" accept="image/*" value=`${building.images[1]}`)
                    label(for="building-2Photo") Choose Building photo
                .building-photo
                    input#fourth-image(type="text", value=`${building.images[2]}`, style="display: none;")
                    input#building-3Photo(type="file" accept="image/*" value=`${building.images[2]}`)
                    label(for="building-3Photo") Choose Building photo
                input#slug(type="text", value=`${building.slug}`, style="display: none;")
                button.post(onClick = `updateBuilding('${building._id}')`) Post Property